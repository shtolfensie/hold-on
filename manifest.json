{
  "manifest_version": 2,
  "name": "Hold on",
  "description": "Take a breather",
  "version": "1.0",
  "permissions": ["<all_urls>", "storage", "tabs", "webRequest", "webRequestBlocking"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "action": {
    "default_popup": "holdon_popup.html",
    "default_icon": "placeholder.png"
  },
  "web_accessible_resources": ["custom.html", "url-blocker.js"]
}
